<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_crm_lead_form_boom_extension" model="ir.ui.view">
        <field name="name">crm.lead.form.boom.extension</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='opportunity_partner']//field[@name='partner_id']"  position="before">
                        <field name="x_lead_category"/>
                        <field name="x_delivery_deadline"/>
                        <field name="x_approved_by"  force_save="1" readonly="1"/>
                        <field name="x_approved_date"  force_save="1" readonly="1"/>
                        <field name="x_duration_since_approved" readonly="1"/>
                        <field name="x_installation_required"/>
                        <field name="x_installation_date" 
                            invisible="not x_installation_required"
                            />
                        <field name="x_contract_reference"/>
                        <field name="x_support_required"/>
                 
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_approve_lead"
                        type="object"
                        class="oe_highlight"
                        string="Aprobar Lead"
                        invisible="x_approved_date"
                        />
            </xpath>
        </field>
    </record>
</odoo>